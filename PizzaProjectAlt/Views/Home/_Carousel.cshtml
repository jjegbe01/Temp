<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class=""></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item">
            <img class="first-slide" src="~/Content/Images/pizza 1.jpg" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Show off your best pizza design with our interactive Pizza Builder!</h1>
                    <p>Login to mix and match toppings to create your perfect pizza!</p>
                    <p><a class="btn btn-lg btn-primary" href="@Url.Action("Login", "Account")" role="button">Login</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img class="second-slide" src="~/Content/Images/pizza 2.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Awesome place to go and find pizza places near me!</h1>
                    <p></p>
                    <p><a class="btn btn-lg btn-primary" href="@Url.Action("Login", "Account")" role="button">Google Maps</a></p>
                </div>
            </div>
        </div>
        <div class="item active">
            <img class="third-slide" src="~/Content/Images/pizza 3.png" alt="Third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>"Pie Space helped me meet friends that enjoy pizza just as much as I do.""</h1>
                    <p><a class="btn btn-lg btn-primary" href="#" role="button">Browse our Community</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


